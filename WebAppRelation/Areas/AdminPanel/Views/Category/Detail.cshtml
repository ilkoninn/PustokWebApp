@model CreateCategoryVM;

<div class="container">
    <div class="col-12 grid-margin stretch-card mb-5 mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Book Section</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Name">Name: </label>
                        <h4>@Model.Name</h4>
                    </div>
                    <div class="form-group">
                        <label asp-for="ParentCategoryId">Parent Category</label>
                        <h4>
                            @{
                                int count = 0;
                            }
                            @{
                                foreach (var category in Model.categories)
                                {
                                    count++;
                                    if ($"{category.Id}" == Model.ParentCategoryId)
                                    {
                                        @category.Name;
                                    }
                                }
                            }
                        </h4>
                    </div>
                    <button class="btn btn-light" asp-controller="Category" asp-action="Table">Back</button>
                </form>
            </div>
        </div>
    </div>
</div>